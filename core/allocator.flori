PROT_READ := 0x1
PROT_WRITE := 0x2
PROT_EXEC := 0x4
PROT_NONE := 0x0

MAP_SHARED := 0x01
MAP_PRIVATE := 0x02
MAP_ANONYMOUS := 0x20

fn brk(addr ^int) ^int {
  syscall(12, addr)
}

fn sbrk(inc ^int) ^ptr int {
  oldaddr := brk(0)
  brk(oldaddr + inc)
  return oldaddr
}

fn malloc(size ^int) ^pointer {
  sbrk(size)
}