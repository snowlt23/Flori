
import "core/prelude"
import "core/io"
import "core/string"
import "core/syntax"
import "core/macros"
import "core/env"

when (is_windows()) {
  import "core/windows"
}

fn sleep(msec Int) {
  when (is_windows()) {
    win_sleep(msec)
  }
}

fn rand() Int  $[importc "rand", header "stdlib.h"]

fn get_rand_max() Int $[importc, header "stdlib.h", pattern "RAND_MAX"]
RAND_MAX := get_rand_max()

fn exit(x Int) $[importc "exit", header "stdlib.h"]
