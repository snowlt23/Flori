macro vec(elems TArray) FExpr $[syntax] {
  if (length(elems) == 0) {
    error(elems, "vec syntax require arguments.")
  }
  ret := new_fblock()
  tmp := gensym()
  t := get_type(elems!0)
  push(ret, quote {
      `tmp := vec[`t]()
    })
  for (e : elems) {
    push(ret, quote {
        push(`tmp, `e)
      })
  }
  push(ret, tmp)
  ret
}

fn extend[T](v ref Vec[T]) {
  v.data = realloc(v.data, v.cap, v.cap*2)
  v.cap = v.cap*2
}

fn push[T](v ref Vec[T], value T) $[nodestruct, importjs, patternjs "$1.push($2)"] {
  if (v.cap < v.len+1) {
    extend(v)
  }
  unref(v.data.p +! (v.len * sizeof[T]())) = value
  v.len += 1
}

fn length[T](v Vec[T]) Int $[importjs, patternjs "$1.length"] {
  v.len
}

fn `![T](v Vec[T], i Int) ref T $[importjs, patternjs "$1[$2]"] {
  unref(v.data.p +! (i * sizeof[T]()))
}

fn `!![T](v ref Vec[T], i Int, value T) {
  unref(v.data.p +! (i * sizeof[T]())) = value
}

iterator items[T](v TExpr[Vec[T]]) {
  i := gensym()
  quote {
    for (`i : range(int(0), length(`v)-1)) {
      `element := `v!`i
      `yield
    }
  }
}

fn print[T](v Vec[T]) {
  print("vec[")
  if (length(v) > 0) {
    print(v!0)
  }
  for (i : range(1, length(v)-1)) {
    print(", ")
    print(v!i)
  }
  print("]")
}

fn getref[T](v ref Vec[T]) Ptr[T] {
  v.data.p
}
