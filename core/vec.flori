type Vec[T] $[nodestruct] {
  data RPtr[T]
  cap Int
  len Int
}

fn vec[T](len Int, cap Int) Vec[T] $[importjs, patternjs "new Array($1)"] {
  var v Vec[T]
  v.data = alloc[T](cap)
  v.cap = cap
  v.len = len
  # v := init(Vec[T]) {
  #   alloc[T](cap)
  #   cap
  #   len
  # }
  v
}
fn vec[T](len Int) Vec[T] {
  vec[T](len, len * 2)
}
fn vec[T]() Vec[T] {
  vec[T](0, 8)
}

fn copy[T](r ref Region, v Vec[T]) Vec[T] {
  newv := vec[T](v.len, v.cap)
  copy_memory(newv.data.p, v.data.p, sizeof[T]() * v.len)
  newv
}

